<aiOverlay:AiOverlayWindowBase x:Class="TarnishedTool.Views.Windows.AiOverlay.SpEffectObserversOverlayWindow"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:aiOverlay="clr-namespace:TarnishedTool.Views.Windows.AiOverlay"
                               mc:Ignorable="d"
                               Title="SpEffectObserversOverlayWindow" Height="450" Width="400">

    <aiOverlay:AiOverlayWindowBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        
        <!-- Scroll Bar thingy -->
        <Style x:Key="ScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="{x:Type Thumb}">
                                                <Setter Property="Background" Value="#ff944d"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="4"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#ffc480"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </aiOverlay:AiOverlayWindowBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Content="◐" Width="24" Height="20" FontSize="14"
                        Background="Transparent" BorderThickness="0" Foreground="#CCFFFFFF"
                        Click="CycleOpacity_Click" Cursor="Hand" ToolTip="Opacity" />
                <TextBlock Text="SpEffect Observers" VerticalAlignment="Center" Margin="5,2,0,0"/> 
                <Button Content="✕" FontSize="12"
                        Margin="248,0,0,0"
                        HorizontalAlignment="Right"
                        Background="Transparent" BorderThickness="0" Foreground="#CCFFFFFF"
                        Click="Close_Click" Cursor="Hand" />
            </StackPanel>
        </Grid>
        
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="5,5,5,10"
                      Visibility="{Binding IsShowSpEffectObservesEnabled, Converter={StaticResource BoolToVis}}">
            <ScrollViewer.Resources>
                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ScrollBar}"/>
            </ScrollViewer.Resources>
            <ItemsControl ItemsSource="{Binding SpEffectObserves}" Margin="5,5,5,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#ff944d" 
                                BorderThickness="0,0,0,1" 
                                Padding="5,8,5,8">
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="Target: " /><Run Text="{Binding TargetName}" FontWeight="SemiBold"/>
                                <LineBreak/>
                                <Run Text="Effect ID: " /><Run Text="{Binding SpEffectId}" Foreground="#ffa733"/>
                            </TextBlock>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</aiOverlay:AiOverlayWindowBase>