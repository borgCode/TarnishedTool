<aiOverlay:AiOverlayWindowBase x:Class="TarnishedTool.Views.Windows.AiOverlay.SpEffectsOverlayWindow"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:aiOverlay="clr-namespace:TarnishedTool.Views.Windows.AiOverlay"
                               mc:Ignorable="d"
                               Title="SpEffectsOverlayWindow" Height="600" Width="400">
    <aiOverlay:AiOverlayWindowBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        
        <!-- Scroll Bar thingy -->
        <Style x:Key="ScrollBar" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Track Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="{x:Type Thumb}">
                                                <Setter Property="Background" Value="#ff944d"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="4"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#ffc480"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </aiOverlay:AiOverlayWindowBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Content="◐" Width="24" Height="20" FontSize="14"
                        Background="Transparent" BorderThickness="0" Foreground="#CCFFFFFF"
                        Click="CycleOpacity_Click" Cursor="Hand" ToolTip="Opacity" />
                <TextBlock Text="Active SpEffects" VerticalAlignment="Center" Margin="5,2,0,0"/> 
                <Button Content="✕" FontSize="12"
                        Margin="248,0,0,0"
                        HorizontalAlignment="Right"
                        Background="Transparent" BorderThickness="0" Foreground="#CCFFFFFF"
                        Click="Close_Click" Cursor="Hand" />
            </StackPanel>
        </Grid>
        
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="5,5,5,10"
                      Background="Transparent"
                      Visibility="{Binding IsShowSpEffectsEnabled, Converter={StaticResource BoolToVis}}">
            <ScrollViewer.Resources>
                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ScrollBar}"/>
            </ScrollViewer.Resources>
            <Grid Margin="5,5,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="5,0,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="70" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ID" FontWeight="Bold" Foreground="#CCFFFFFF"/>
                    <TextBlock Grid.Column="1" Text="Time Left" FontWeight="Bold" Foreground="#CCFFFFFF"/>
                    <TextBlock Grid.Column="2" Text="Duration" FontWeight="Bold" Foreground="#CCFFFFFF"/>
                    <TextBlock Grid.Column="3" Text="State Info" FontWeight="Bold" Foreground="#CCFFFFFF"/>
                </Grid>
                <ItemsControl Grid.Row="1"
                              ItemsSource="{Binding SpEffectViewModel.ActiveEffects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#ff944d" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="5,8,5,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Id}" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="1" Text="{Binding TimeLeft, StringFormat={}{0:F1}}" />
                                    <TextBlock Grid.Column="2" Text="{Binding Duration, StringFormat={}{0:F1}}" />
                                    <TextBlock Grid.Column="3" Text="{Binding StateInfo}" TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</aiOverlay:AiOverlayWindowBase>