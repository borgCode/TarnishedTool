<local:TopmostWindow x:Class="TarnishedTool.Views.Windows.GracePresetWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:TarnishedTool.Views.Windows"
                     xmlns:controls="clr-namespace:TarnishedTool.Controls"
                     mc:Ignorable="d"
                     Title="GracePresetWindow" Height="500" Width="900"
                     Background="{StaticResource BackgroundBrush}"
                     Foreground="{StaticResource TextBrush}"
                     BorderBrush="{StaticResource BorderBrush}"
                     WindowStyle="None"
                     AllowsTransparency="True"
                     ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:TitleBar Title="Grace Presets" />

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3"
                    Margin="0,0,0,10"
                    Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Preset:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0" />

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding CustomLoadouts}"
                              SelectedItem="{Binding SelectedLoadout}"
                              DisplayMemberPath="Name"
                              Margin="0,0,10,0" />

                    <Button Grid.Column="2"
                            Content="New"
                            Command="{Binding CreateLoadoutCommand}"
                            Margin="0,0,5,0"
                            Padding="10,3" />

                    <Button Grid.Column="3"
                            Content="Rename"
                            Command="{Binding RenameLoadoutCommand}"
                            Margin="0,0,5,0"
                            Padding="10,3" />

                    <Button Grid.Column="4"
                            Content="Delete"
                            Command="{Binding DeleteLoadoutCommand}"
                            Padding="10,3"
                            Margin="0,0,5,0" />

                    <Button Grid.Column="5"
                            Content="Import"
                            Command="{Binding ImportLoadoutCommand}"
                            Padding="10,3"
                            Margin="0,0,5,0" />

                    <Button Grid.Column="6"
                            Content="Export"
                            Command="{Binding ExportLoadoutCommand}"
                            Padding="10,3" />

                    <CheckBox Grid.Column="7"
                              x:Name="AlwaysOnTopCheckBox"
                              Content="Always on Top"
                              HorizontalAlignment="Right"
                              Margin="10,0,0,0"
                              Checked="AlwaysOnTopCheckBox_Checked"
                              Unchecked="AlwaysOnTopCheckBox_Unchecked" />
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Areas" Margin="0,0,0,5" />

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Graces.Groups}"
                             SelectedItem="{Binding Graces.SelectedGroup}"
                             BorderThickness="1"
                             BorderBrush="#333">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Border"
                                                    Background="Transparent"
                                                    Padding="8,4">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource AccentBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource HoverBrush}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Button Grid.Row="2"
                            Content="Add to Preset"
                            Click="AddToPreset_Click"
                            Height="25"
                            Margin="0,10,0,0" />
                </Grid>

                <Grid Grid.Column="1" Margin="10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Text="{Binding Graces.SearchText, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Right"
                             Width="150"
                             Height="25"
                             VerticalAlignment="Center"
                             Margin="0,0,0,5">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">
                                    <Grid>
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                      Focusable="false"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalAlignment="Center"
                                                      Margin="5,0,0,0" />
                                        <TextBlock Text="Search graces..."
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Margin="5,0,0,0"
                                                   Foreground="Gray"
                                                   IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition
                                                                    Binding="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=TextBox}}"
                                                                    Value="" />
                                                                <Condition
                                                                    Binding="{Binding Path=IsKeyboardFocused, RelativeSource={RelativeSource AncestorType=TextBox}}"
                                                                    Value="False" />
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush"
                                                Value="{StaticResource AccentBrush}" />
                                        <Setter TargetName="border" Property="BorderThickness" Value="1.5" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>

                    <Border Grid.Row="1"
                            BorderThickness="1"
                            BorderBrush="#333">
                        <ListView
                            x:Name="AddGraceListView"
                            ItemsSource="{Binding Graces.Items}"
                            SelectedItem="{Binding Graces.SelectedItem}"
                            SelectionMode="Extended"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            BorderThickness="0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <EventSetter Event="MouseDoubleClick" Handler="Grace_MouseDoubleClick" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="8,4" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="Border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        SnapsToDevicePixels="true">
                                                    <ContentPresenter
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        Margin="{TemplateBinding Padding}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="{StaticResource AccentBrush}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="{StaticResource HoverBrush}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.Resources>
                                            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                                        </Grid.Resources>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding MainArea}"
                                                   Foreground="#ceccca"
                                                   FontStyle="Italic"
                                                   Margin="10,0,0,0"
                                                   Visibility="{Binding DataContext.Graces.IsSearchActive, 
                                                       RelativeSource={RelativeSource AncestorType=Window}, 
                                                       Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Preset Graces" VerticalAlignment="Center" />

                        <TextBox Grid.Column="1"
                                 Text="{Binding PresetGracesSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="120"
                                 VerticalContentAlignment="Center"
                                 Height="30"
                                 HorizontalAlignment="Right"/>
                    </Grid>

                    <ListView Grid.Row="1"
                              ItemsSource="{Binding FilteredCurrentLoadoutGraces}"
                              SelectedItem="{Binding SelectedLoadoutGrace}"
                              BorderThickness="1"
                              BorderBrush="#333">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <EventSetter Event="MouseDoubleClick" Handler="AddedGrace_MouseDoubleClick" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Padding" Value="8,4" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    SnapsToDevicePixels="true">
                                                <ContentPresenter
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    Margin="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource AccentBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background"
                                                            Value="{StaticResource HoverBrush}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" />
                                    <TextBlock Text="{Binding MainArea}"
                                               Foreground="#888888"
                                               FontSize="11" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Remove"
                                Command="{Binding RemoveGraceCommand}"
                                Padding="10,3"
                                Margin="0,0,10,0" />
                        <Button Content="Save &amp; Close"
                                Click="SaveButton_Click"
                                Padding="10,3" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</local:TopmostWindow>