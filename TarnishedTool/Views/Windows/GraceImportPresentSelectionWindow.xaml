<local:TopmostWindow x:Class="TarnishedTool.Views.Windows.GraceImportPresentSelectionWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:TarnishedTool.Views.Windows"
                     xmlns:controls="clr-namespace:TarnishedTool.Controls"
                     xmlns:vm="clr-namespace:TarnishedTool.ViewModels"
                     mc:Ignorable="d"
                     Title="Import Grace Presets" Height="400" Width="500"
                     Background="{StaticResource BackgroundBrush}"
                     Foreground="{StaticResource TextBrush}"
                     BorderBrush="{StaticResource BorderBrush}"
                     WindowStyle="None"
                     AllowsTransparency="True"
                     ResizeMode="NoResize"
                     WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:TitleBar Title="Import Grace Presets" />

        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0"
                       Margin="0,0,0,10">
                <Run Text="Found " />
                <Run Text="{Binding Presets.Count, Mode=OneWay}" FontWeight="SemiBold" />
                <Run Text=" presets in file" />
            </TextBlock>
            
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,10"
                        Visibility="{Binding HasConflicts, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="If name exists:"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0" />
                <ComboBox SelectedItem="{Binding SelectedConflictResolution}"
                          Width="100">
                    <vm:ConflictResolution>Skip</vm:ConflictResolution>
                    <vm:ConflictResolution>Overwrite</vm:ConflictResolution>
                    <vm:ConflictResolution>Rename</vm:ConflictResolution>
                </ComboBox>
            </StackPanel>
            
            <Border Grid.Row="2"
                    BorderThickness="1"
                    BorderBrush="#333"
                    CornerRadius="3">
                <ListView x:Name="PresetListView"
                          ItemsSource="{Binding Presets}"
                          SelectionMode="Extended"
                          BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="Selected" Handler="PresetItem_Selected" />
                            <EventSetter Event="Unselected" Handler="PresetItem_Unselected" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="8,6" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Border"
                                                Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background"
                                                        Value="{StaticResource AccentBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background"
                                                        Value="{StaticResource HoverBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center">
                                    <Run Text="{Binding Name, Mode=OneWay}" />
                                    <Run Text=" (" Foreground="#888" />
                                    <Run Text="{Binding GraceCount, Mode=OneWay}" Foreground="#888" />
                                    <Run Text=" graces)" Foreground="#888" />
                                </TextBlock>

                                <Border Grid.Column="1"
                                        Background="#553a2a"
                                        CornerRadius="3"
                                        Padding="6,2"
                                        Margin="10,0,0,0"
                                        Visibility="{Binding AlreadyExists, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="exists"
                                               FontSize="11"
                                               Foreground="#d4a574" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
            
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0">
                <Button Content="Cancel"
                        Click="Cancel_Click"
                        Padding="15,5"
                        Margin="0,0,10,0" />
                <Button Click="Import_Click"
                        Padding="15,5"
                        IsEnabled="{Binding CanImport}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Import (" />
                        <TextBlock Text="{Binding SelectedCount}" />
                        <TextBlock Text=")" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</local:TopmostWindow>