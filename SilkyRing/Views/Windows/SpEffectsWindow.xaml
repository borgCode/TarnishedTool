<Window x:Class="SilkyRing.Views.Windows.SpEffectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SilkyRing.Views.Windows"
        mc:Ignorable="d"
        Title="SpEffectsWindow" Height="450" Width="800">
    <Grid>
        <ItemsControl ItemsSource="{Binding ActiveEffects}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Id}" Foreground="White"/>
                        <TextBlock Grid.Column="1" Text="{Binding TimeLeft, StringFormat={}{0:F1}}" Foreground="#aaa"/>
                        <TextBlock Grid.Column="2" Text="{Binding Duration, StringFormat={}{0:F1}}" Foreground="#666"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
